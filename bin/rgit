#!/usr/bin/env ruby
# frozen_string_literal: true

require "bundler/setup"
require "rgit"
require "main"

Main {
  mode 'init' do
    argument 'path'
    def run()
      if params["path"].given?
        path = params['path'].value
        Rgit::Repository.create(path)
        puts "Created repository at #{path}"
      end
    end
  end

  mode 'version' do
    def run()
      puts "Rgit version #{Rgit::VERSION}"
    end
  end
}